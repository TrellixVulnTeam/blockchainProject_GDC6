
<link rel="stylesheet" href="/static/css/product.css">
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="../../static/js/product.js"></script>
<script src="../../shopTemplate/js/popper.min.js"></script>
  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

      <!--Grid row-->
      <div class="row wow fadeIn">

        <!--Grid column-->
        <div class="col-md-6 mb-4">
            
          <img src="{{items.itemPic}}" class="img-fluid" alt="" width="600px" height="430px">

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-6 mb-4">

          <!--Content-->
          <div class="p-4">

            <div class="mb-3">
              <a href="">
                <span class="badge purple mr-1 itemCategory" id="itemCategory" value="{{items.itemCategory}}">{{items.itemCategory}}</span>
              </a>
              <a href="">
                <span class="badge blue mr-1">New</span>
              </a>
              <a href="">
                <span class="badge red mr-1">Bestseller</span>
              </a>
            </div>

            <p class="lead">
              <span>{{items.itemPrice}} 원</span>
            </p>
            <p class="lead font-weight-bold">품명</p>
            <p>{{items.itemName}}</p>
            <p class="lead font-weight-bold">판매자</p>
            <p id="userId">{{items.seller}}</p>          
            <p class="lead font-weight-bold">조회수</p>
            <p>{{items.hits}}</p>

            <p class="lead font-weight-bold transactionModeAppend">배송 방식</p>
            <input type="hidden" name="" id="transactionModeHidden" value="{{items.transactionMode}}">
            <input type="hidden" name="" id="transactionPositionHidden" value="{{items.transactionPosition}}">
            <input type="hidden" name="" id="deliveryFeeHidden" value="{{items.deliveryFee}}">
            <input type="hidden" name="" id="sellStateHidden" value="{{items.sellState}}">
        <!-- Button trigger modal -->

            <!-- Modal -->
            <!--Modal: modalConfirmDelete-->
            <div class="modal fade" id="modalConfirmDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-sm modal-notify modal-danger" role="document">
                    <!--Content-->
                    <div class="modal-content text-center">
                        <!--Header-->
                        <div class="modal-header d-flex justify-content-center">
                            <p class="heading">거래 방식 선택</p>
                        </div>

                        <!--Body-->
                        <div class="modal-body">
                          <!-- Default unchecked -->
                          <!-- Group of default radios - option 1 -->
                            <div class="custom-control custom-radio op1">
                              <input type="radio" class="custom-control-input" id="defaultGroupExample1" name="transactionMode" value="1">
                              <label class="custom-control-label" for="defaultGroupExample1"><h3>직거래</h3></label>
                            </div>

                            <!-- Group of default radios - option 2 -->
                            <div class="custom-control custom-radio op2">
                              <input type="radio" class="custom-control-input" id="defaultGroupExample2" name="transactionMode" value="2">
                              <label class="custom-control-label" for="defaultGroupExample2"><h3>택배 거래</h3></label>
                            </div>
                          
                        </div>
                        <!--Footer-->
                        <div class="modal-footer flex-center">
                            <a class="btn  btn-outline-danger purchaseItem">Yes</a>
                            <a type="button" class="btn  btn-danger waves-effect" data-dismiss="modal">No</a>
                        </div>
                    </div>
                    <!--/.Content-->
                </div>
            </div>
    <!--Modal: modalConfirmDelete-->
            <!-- Modal -->  

            <form class="d-flex justify-content-left" onclick="return false;">
              <!-- Default input -->
              <input type="hidden" name="key" id="key" value="{{items.key}}"> 
              <!--button True 인지에 따라서 구매하기, 판매완료 버튼 -->
                <button class="btn btn-md my-0 p purchasing" type="button" style="margin-left:0px; margin" data-toggle="modal" data-target="#modalConfirmDelete">
                  <i class="fa fa-shopping-cart ml-1"></i>
                </button>
                
                <!-- Button trigger modal -->

              <button class="btn btn-warning btn-md my-0 p purchaseChatting" type="button" style="margin-left:0px; margin"> 채팅
                  <i class="fa fa-comment" aria-hidden="true"></i>  
              </button>

            </form>

          </div>
          <!--Content-->

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->

      <hr>

      <!--Grid row-->

        <!--Grid column-->
          

      <!--Grid row-->
      <!--Grid row-->
      <!-- Tab links -->
      <div class="tab">
          <button class="tablinks btn btn-default" onclick="openCity(event, 'itemInfo')" id="defaultOpen">상품 정보</button>
          <button class="tablinks btn btn-default" onclick="openCity(event, 'itemReply')">상품 댓글</button>
          <button class="tablinks btn btn-default" onclick="openCity(event, 'Tokyo')">상품 </button>  
      </div>
      <!-- Tab content -->
      <div id="itemInfo" class="tabcontent">
        <h4 class="my-4 h4">상품 정보</h4>
        <p>{{items.itemInfo}}</p>

        {{#each pictures}}
            <img src="{{pic}}" alt="">
            <br>
            <br>
        {{/each}}
      </div>

      <div id="itemReply" class="tabcontent">
        <h4 class="my-4 h4">상품 댓글</h4>
        <input type="text">
      </div>

      <div id="Tokyo" class="tabcontent">
        <h3>Tokyo</h3>
        <p>Tokyo is the capital of Japan.</p>
      </div>
      <script>
        $(document).ready(function(){
            //JK Editor를 위한 html 코드를 텍스트 로 변경
            $('#itemInfo > p').html($('#itemInfo > p').text());
            //페이지가 렌더링 되었을때, 상품정보 보이기
            $('#defaultOpen').click();
          });
      </script>
    </div>
  </div>
  </main>
  <script src="../../static/js/purchaseItem.js"></script>
  <!--Main layout-->

 