<style>
    .li-margin {
        margin-right: 1200px;
    }

    .form-group {
        width: 100%;
    }

    .form-group li {
        
        list-style: none;
        padding-top: 30px;
    }

    .form-block {
      
    }

    .form-block .text_field {
        display: inline-block;
        width: 10%;
    }

    .form-block .input_field {
        display: inline-block;
        width: 20%;
    }
</style>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">{{id}} 회원정보</a>
    </li>
    <li class="breadcrumb-item active">수정</li>
</ol>
<div class="breadcrumb form-block">
    <ul class="form-group">
        <li>
            <label for="id" class="text_field">아이디</label>
            <input type="text" class="form-control input_field" id="id" name="identity" value="{{id}}">
        </li>
        <li>
            <label for="pw" class="text_field">비밀번호</label>
            <input type="password" class="form-control input_field" id="pw" name="password">
        </li>
        <li>
            <label for="email" class="text_field">email</label>
            <input type="email" class="form-control input_field" id="email" name="email" value="{{email}}">
        </li>
        <li>
            <label for="birth" class="text_field">주민 등록 번호</label>
            <input type="text" class="form-control input_field" id="birth" name="birth" value="{{birth}}" style="width:20%;"><span>-</span>
            <input type="text" class="form-control input_field" id="lastIdNumber" name="lastIdNumber" value="{{lastIdNumber}}" style="width:20%;">
        </li>
        <li>
            <label for="phone" class="text_field">핸드폰번호</label>
            <input type="text" class="form-control input_field" id="phone" name="phone">
        </li>
        <li>
            <button class="btn btn-primary update">수정</button>
        </li>
        <li>
            <input type="hidden" name="" value="{{auth}}">
        </li>
    </ul>
</div>