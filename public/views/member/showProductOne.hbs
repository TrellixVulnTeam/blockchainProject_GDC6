<link rel="stylesheet" href="../../static/css/myProduct.css">
<link rel="stylesheet" href="../../static/css/a_tag.css">
<script src="../../static/js/showMyProduct.js"></script>
<!------ Include the above in your HEAD tag ---------->
<ol class="breadcrumb" style="margin-top:100px;">
    <li class="breadcrumb-item active">
        판매 내역 정보
    </li>
</ol>	

   <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">상품</th>
      <th scope="col">판매자</th>
      <th scope="col">거래방식</th>
      <th scope="col">거래요청시간</th>
      <th scope="col">현재상태</th>
    </tr>
  </thead>
  <tbody>
    {{#each items}}
    <tr>
      <input type="hidden" name="" class="confirmTransaction" value="{{confirmTransaction}}">
      <input type="hidden" name="" class="transactionInfoKey" value="{{transInfo.key}}">
      <th scope="row">{{@index}}</th>
      <td><img src="{{itemContentsPic}}" class="rounded" alt="" width="50px;" height="50px;">{{itemName}}</td>
      <td class="buyer chatting" style="cursor:pointer;"><h4>{{transInfo.seller}}</h4></td>
      <td class="transactionMode">{{transInfo.transactionMode}}</td>
      <td class="startDateTime"><h4>{{transInfo.startDateTime}}</h4></td>
      <td class="transactionState">{{transInfo.transactionState}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
<script src="../../static/js/member/mySellProduct.js"></script>